{
  "printWidth": 100,
  "endOfLine": "auto",
  "useTabs": false,
  "tabWidth": 4,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": [
        "*.ts"
      ],
      "options": {
        "parser": "typescript",
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true
      }
    },
    {
      "files": [
        "*.js"
      ],
      "options": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true
      }
    }
  ]
}
